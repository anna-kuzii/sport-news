{
  "name": "sport-news",
  "version": "1.0.0",
  "description": "sport news site",
  "main": "server.js",
  "scripts": {
    "eslint": "node_modules/.bin/eslint --ignore-path .gitignore *.{js,jsx} --fix ",
    "SassLint": "node_modules/.bin/sass-lint --ignore-path .gitignore -v *.scss ",
    "precommit": "lint-staged",
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "build": "react-scripts build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "nothing": "nothing",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=true npm install --prefix client && npm run build --prefix client"  
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anna-kuzii/sport-news.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anna-kuzii/sport-news/issues"
  },
  "homepage": "https://github.com/anna-kuzii/sport-news#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "concurrently": "^4.1.2",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-validator": "^6.1.1",
    "mongodb": "^3.3.0",
    "mongoose": "^5.6.9",
    "nodemailer": "^6.3.0",
    "nodemailer-promise": "^2.0.0",
    "nodemon": "^1.19.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2",
    "sass-lint": "^1.13.1"
  }
}
