{
  "name": "sport-news",
  "version": "1.0.0",
  "description": "sport news site",
  "main": "server.js",
  "lint-staged": {
    "*.{js,jsx}": "node_modules/.bin/eslint",
    "*.scss": "node_modules/.bin/sass-lint"
  },
  "scripts": {
    "server": "nodemon server.js",
    "eslint": "node_modules/.bin/eslint --ignore-path .gitignore *.{js,jsx} --fix ",
    "SassLint": "node_modules/.bin/sass-lint --ignore-path .gitignore -v *.scss ",
    "precommit": "lint-staged",
    "client": "npm start --prefix client",
    "start": "npm run server",
    "heroku-postbuild": "cd client && npm install && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anna-kuzii/sport-news.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anna-kuzii/sport-news/issues"
  },
  "homepage": "https://github.com/anna-kuzii/sport-news#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "cors": "^2.8.5",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "concurrently": "^4.1.2",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-validator": "^6.1.1",
    "mongodb": "^3.3.0",
    "mongoose": "^5.6.9",
    "nodemailer": "^6.3.0",
    "nodemailer-promise": "^2.0.0",
    "nodemon": "^1.19.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "eslint": "^6.1.0"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-flowtype": "^4.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "lint-staged": "^9.2.1",
    "pre-commit": "^1.2.2",
    "sass-lint": "^1.13.1"
  }
}
